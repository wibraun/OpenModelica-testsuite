// name: testADOLC6
// status: correct
// teardown_command: rm -f adolcTest* output.log

loadString("
  model adolcTest
    Real x(start=1),y;
    function f
      input Real x;
      output Real y;
    protected 
      Real w[2] = {sin(3.14), sin(x)};
    algorithm
      y := w[1]*sin(x);
      y := y+w[2];
    end f;
  equation
    y = f(x);
    der(x) = y*time;
  end adolcTest;
");
getErrorString();


setCommandLineOptions("--adolcTrace");
getErrorString();

simulate(adolcTest, simflags="-jacobian=adolc");
getErrorString();
val(x, 1.0);

simulate(adolcTest, simflags="-jacobian=adolcSparse");
getErrorString();
val(x, 1.0);

simulate(adolcTest);
getErrorString();
val(x, 1.0);


